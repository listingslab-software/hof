{
  "name": "@listingslab/hof",
  "version": "19.2.9",
  "scripts": {
    "start": "clear && npm run ssr",
    "test":  "clear && npx lerna run test",
    "bootstrap": "clear && npx lerna bootstrap",
    "new-app": "clear && npx create-single-spa",
    "shared": "clear && cd ./packages/shared && npm run start:standalone",
    "lint": "clear && npx lerna run lint",
    "format": "clear && npx lerna run format",
    "build": "clear && npx lerna run build && npm run dist",
    "dist": "$PWD/.scripts/unix/dist 19.2.9",
    "serve": "clear && serve dist -p 2022",
    "ssr": "$PWD/.scripts/unix/ssr",
    "functions": "clear && cd ./packages/firebase && npm run serve",
    "functions:watch": "clear && cd ./packages/firebase && npm run watch",
    "deploy": "clear && npm run format && npm run lint && npm run build && firebase deploy"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
