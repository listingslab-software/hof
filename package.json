{
  "name": "@listingslab/hof",
  "version": "19.1.0",
  "scripts": {
    "start": "clear && npm run functions && npm run dev",
    "bootstrap": "clear && npx lerna bootstrap",
    "dev": "$PWD/.scripts/unix/dev",
    "functions": "$PWD/.scripts/unix/functions",
    "new-app": "clear && npx create-single-spa",
    "build": "clear && npx lerna run build",
    "test": "echo Test results are fine, thanks. How are you?",
    "lint": "clear && cd ./packages/functions && npm run lint",
    "dist": "$PWD/.scripts/unix/dist 19.1.0",
    "deploy:hosting": "clear && firebase deploy --only hosting",
    "deploy:functions": "clear && firebase deploy --only functions",
    "deploy": "clear && npm run lint && npm run build && npm run dist && firebase deploy"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
