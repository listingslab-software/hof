{
  "name": "@listingslab/hof",
  "version": "19.4.0",
  "scripts": {
    "start": "npm run ssr",
    "test":  "clear && npx lerna run test",
    "bootstrap": "clear && npx lerna bootstrap",
    "single-spa": "clear && npx create-single-spa",
    "build": "clear && npx lerna run build",
    "check": "$PWD/.scripts/check",
    "dist": "$PWD/.scripts/dist 19.4.0",
    "serve": "clear && serve dist -p 2022",
    "ssr": "$PWD/.scripts/ssr",
    "standalone": "$PWD/.scripts/standalone filebrowser",
    "deploy": "clear && npm run check && npm run build && npm run dist && firebase deploy"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
