{
  "firestore": {
    "rules": "./packages/firebase/config/firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "packages/firebase",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "SSR"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
